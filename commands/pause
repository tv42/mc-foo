#!/usr/bin/env python
#TODO help, usage
#help: "pause - send a pause command to dj"
#usage: "pause"
import xmlrpc
import os

try:
    host=os.environ['MCFOOHOST']
except KeyError:
    host='localhost'

try:
    port=int(os.environ['MCFOOPORT'])
except KeyError:
    port=25706

c = xmlrpc.client(host, port)
s=c.execute('mcfoo.pause', [])
