#!/usr/bin/env python2
#TODO help, usage
#help: "pause - send a pause command to dj"
#usage: "pause"

import McFoo.client

class McFooClientPause(McFoo.client.McFooClientSimple):
    def handle_login(self, perspective):
        McFoo.client.McFooClientSimple.handle_login(self, perspective)
        self.remote.pause(McFoo.client.McFooClientExitWhenDone())

def main():
    c = McFooClientPause()
    c()

if __name__ == "__main__":
    main()
