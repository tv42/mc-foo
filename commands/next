#!/usr/bin/env python
#TODO help, usage
#help: "next - send a skip to next song command to dj"
#usage: "next"
import xmlrpc
import os

def main():
    try:
        host=os.environ['MCFOOHOST']
    except KeyError:
        host='localhost'

    try:
        port=int(os.environ['MCFOOPORT'])
    except KeyError:
        port=25706

    c = xmlrpc.client(host, port)
    s=c.execute('mcfoo.next', [])


if __name__ == "__main__":
    main()
