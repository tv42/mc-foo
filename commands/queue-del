#!/bin/sh -e
if [ "$1" = "help" ]; then
    echo "queue-del - interactively remove songs from the playqueue"
    exit 0
fi

if [ "$1" = "usage" ]; then
    echo "queue-del"
    exit 0
fi

if [ "$1" = "" ]; then
    set -- $(mc-foo list \
	    |sed 's/^\([0-9]\+\) /<s:\1>\1 /g'\
	    |iselect --exit-no-select --multi-line \
		    --name='Select songs to remove' \
		    --title='MC Foo')
fi

mc-foo delete "$@"
