#!/bin/sh -e
MCFOOHOME="${MCFOOHOME:-/usr/lib/mc-foo}"

if [ "$1" = "" ]; then
    echo "usage: mc-foo <command> [arguments]"
    echo "  All commands understand arguments 'help' and 'usage'."
    echo "  Try mc-foo help for a list of command or mc-foo usage"
    echo "  for a usage summary."
    exit 0
fi

if [ -x "$MCFOOHOME/commands/$1" ]; then
    CMD="$1"
    shift
    exec "$MCFOOHOME/commands/$CMD" "$@"
else
    echo "mc-foo: no such command." 1>&2
    exit 1
fi
